---
const { title, subtitle, desc } = Astro.props;
---

<div class="timeline_entry flex">
  <div class="education__time">
    <span class="mt-2 block h-4 w-4 rounded-full bg-gray-400 dark:bg-gray-600"></span>
    <span class="education__line block h-full w-[2px] translate-x-[7px] bg-gray-400 dark:bg-gray-600"></span>
  </div>
  <div class="bd-grid px-5">
    <div class="mb-1 font-semibold">{title}</div>
    <div class="text-sm font-light">{subtitle}</div>
    <div class="description">
      {desc && <p>{desc}</p>}
      <slot />
    </div>
  </div>
</div>
