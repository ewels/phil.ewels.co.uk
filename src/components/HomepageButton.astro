---
const { href, target = "_blank", title, icon } = Astro.props;
import { Icon } from "astro-icon";
---

<a
  href={href}
  target={target}
  class="btn-ghost no-animation btn-sm btn mr-1 mb-2 gap-2 border-neutral font-normal normal-case opacity-70 hover:border-neutral hover:opacity-100"
  aria-label={title}
>
  <Icon name={icon} size="18px" />
  {title}
</a>
