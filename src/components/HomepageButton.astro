---
const { href, target = "_blank", title, icon } = Astro.props;
import { Icon } from "astro-icon";
---

<a
  href={href}
  target={target}
  class="h-8 px-3 text-xs bg-transparent hover:bg-slate-500/20 inline-flex rounded-lg cursor-pointer flex-wrap items-center justify-center text-center transition mr-1 mb-2 gap-2 border border-gray-500 transition-colors opacity-70 hover:opacity-100 duration-75"
  aria-label={title}
>
  <Icon name={icon} size="18px" />
  {title}
</a>
