---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
---

<div class="w-full md:w-1/3">
  <a href={url} target={target}>
    <div class="card mx-6 my-2 bg-base-100 transition ease-in-out hover:scale-[102%] hover:shadow-xl">
      <figure><img src={img} alt="Shoes" /></figure>
      <div class="card-body">
        <h2 class="card-title">
          {title}
          {badge && <div class="badge-secondary badge">{badge}</div>}
        </h2>
        <p>{desc}</p>
        <div class="card-actions justify-end">
          {tags && tags.map((tag) => <div class="badge-outline badge">{tag}</div>)}
        </div>
      </div>
    </div>
  </a>
</div>
