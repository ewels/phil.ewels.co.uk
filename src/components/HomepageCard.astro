---
import type { CollectionEntry } from "astro:content";
interface Props {
  title;
  description;
  href;
  btn_text;
  items;
}

const { title, description, href, btn_text, items } = Astro.props;
---

<div class="flex flex-col justify-between rounded border shadow dark:border-zinc-700">
  <h2 class="m-5 text-2xl"><a href={href}>{title}</a></h2>
  <p class="mx-5 mb-5 grow self-stretch">{description}</p>
  {
    items && (
      <div class="flex justify-around p-5 border-t bg-zinc-100 dark:border-t-zinc-700 dark:bg-zinc-800">
        {items &&
          items.map((item) => (
            <a href={item.url} title={item.title} class="w-12 rounded border p-2 shadow dark:border-gray-700">
              <img src={item.iconImage} alt={item.title} class="block dark:hidden" />
              <img src={item.iconImageDark} alt={item.title} class="hidden dark:block" />
            </a>
          ))}
      </div>
    )
  }
  {
    btn_text && (
      <div class="border-t bg-zinc-100 dark:border-t-zinc-700 dark:bg-zinc-800">
        <a href={href} class="block  p-5 w-full h-full text-center">
          {btn_text}
        </a>
      </div>
    )
  }
</div>
